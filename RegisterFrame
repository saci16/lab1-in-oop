    private void btn_RegisterActionPerformed(java.awt.event.ActionEvent evt) {                                             
        
        User users = new User();
        UserController uscon = new UserController();
        
        users.setFirstName(tf_FName.getText());
        users.setLastName(tf_LName.getText());
        users.setUserName(tf_UName.getText());
        users.setPassword(tf_Password.getText());
        
        uscon.register(users);
        
        
        LoginFrame LF = new LoginFrame();
        LF.setVisible(true);
        this.dispose();
        
    }                                            

    private void btn_LoginActionPerformed(java.awt.event.ActionEvent evt) {                                          
        LoginFrame LF = new LoginFrame();
        LF.setVisible(true);
        this.dispose();
        
    }                                         
    
    
